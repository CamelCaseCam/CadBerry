{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GIL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#prepro"
		},
		{
			"include": "#ident"
		},
		{
			"include": "#string"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.gil",
				"match": "(sequence|operation|import|using|operator|typedef|inherits|for|from)"
			}]
		},
		"comments": {
			"patterns": [
				{
					"name":  "comment.block.gil",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.line.double-slash.gil",
					"begin": "//",
					"end": "\n"
				}
			]
		},
		"prepro": {
			"patterns": [
				{
					"name": "meta.preprocessor.gil",
					"match": "#.*"
				}
			]
		},
		"ident": {
			"patterns": [
				{
					"name": "variable.parameter.gil",
					"match": "(?<![\\.@'])\\$[a-zA-Z0-9*_-]{1,}"
				},
				{
					"name": "entity.name.function.gil",
					"match": "(?<![\\.@'])[a-zA-Z0-9*_-]{1,}"
				},
				{
					"name": "entity.name.type",
					"match": "\\.[a-zA-Z0-9@*_-]{1,}"
				},
				{
					"name": "string.quoted.double.gil",
					"begin": "@",
					"end": "@"
				}
			]
		},
		"string": {
			"patterns": [
				{
					"name": "string.quoted.double.gil",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.single.gil",
					"begin": "'",
					"end": "'"
				}
			]
		}
		
	},
	"scopeName": "source.gil"
}